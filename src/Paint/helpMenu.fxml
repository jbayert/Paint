<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!--  Launches a Help file that the user can look though-->

<ScrollPane fitToWidth="true" maxHeight="1000.0" maxWidth="1000.0" minHeight="200.0" minWidth="300.0" prefHeight="550.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Paint.helpMenuController">
    <content>
        <VBox prefWidth="476.0">
            <children>
                <StackPane>
                    <children>
                        <Label alignment="CENTER" text="Pain(t) Help">
                            <font>
                                <Font size="36.0" />
                            </font>
                        </Label>
                    </children>
                </StackPane>
                <Accordion prefHeight="490.0" prefWidth="598.0">
                    <panes>
                        <TitledPane animated="false" text="How to Open/Save">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <Label fx:id="OpenSave" text="Help" wrapText="true" />
                                    </children>
                                </AnchorPane>
                            </content>
                        </TitledPane>
                        <TitledPane animated="false" text="How to Edit">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <Label fx:id="Edit" text="Label" />
                                    </children>
                                </AnchorPane>
                            </content>
                        </TitledPane>
                        <TitledPane animated="false" text="Other Help">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <Label fx:id="Other" text="Help" />
                                    </children>
                                </AnchorPane>
                            </content>
                        </TitledPane>
                    </panes>
                </Accordion>
            </children>
        </VBox>
    </content>
</ScrollPane>
